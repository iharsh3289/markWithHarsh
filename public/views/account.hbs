<div class="page-wrap">
    <header class="main-header">
        <a href="#site-nav">
            <i class="fa fa-cog" aria-hidden="true"></i>
        </a>
        <a href="#" class="close-menu">
            <i class="fa fa-cog" aria-hidden="true"></i>
        </a>
    </header>
    <div class="row messages">
        <div class="col-xs-12">
            <ul id="messages-list">
                <li id="message"></li>
            </ul>
        </div>
    </div>
    <section id="section2">
        <div class="header-row">
            <h2>Settings</h2>
        </div>
        <div id="user-settings">
            <div class="row signup-form-content-row col-md-8">
                <div class="update-form-content">
                    <form class="update-form">
                        <div class="form-group first-name">
                            <label>First Name</label>
                            <input type="text" id="first-name" name="first-name" placeholder="First Name" minlength="2" required>
                        </div>
                        <div class="form-group last-name">
                            <label>Last Name</label>
                            <input type="text" id="last-name" name="last-name" placeholder="Last Name" minlength="2" required>
                        </div>
                        <div class="form-group email">
                            <label>Email Address</label>
                            <input type="email"  id="email"name="email" placeholder="Email" minlength="5" required>
                        </div>
                        <div class="form-group email-confirm">
                            <label>Confirm New Email Address</label>
                            <input type="email"  id="email-confirm"name="email" placeholder="Email" minlength="5" oninput="check(this, 'email')">
                        </div>
                        <div class="form-group phoneNumber">
                            <label>Phone Number</label>
                            <input type="phoneNumber" id="phoneNumber" name="phoneNumber" placeholder="Phone Number" minlength="10" maxlength="10" pattern="^[6-9]\d{9}$" required><br />
                            <label><h5>(Only Indin Mobile Numbers. Don't include Country Code)</h5></label>
                        </div>
                        <br />
                        <button type="submit" class="btn btn-primary">Update Personal Info</button>
                    </form>
                    <br />
                    <form class="password-form">
                        <div class="form-group password">
                            <label>New Password</label>
                            <input type="password" id="password" name="password" placeholder="Leave empty to keep current password" minlength="6" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?!.*\s).*$">
                            <label><h5>(must use uppercase and lowercase letters, and numbers)</h5></label>
                        </div>
                        <div class="form-group password-confirm">
                            <label>Confirm New Password</label>
                            <input type="password" id="password-confirm" name="password-confirm" placeholder="Confirm New Password" minlength="6" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?!.*\s).*$" oninput="check(this, 'password')">
                        </div>
                        <br />
                        <button type="submit" class="btn btn-primary">Update Password</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>
<script language='javascript' type='text/javascript'>
    function check(input, checkAgainst) {
        if (input.value != document.getElementById(checkAgainst).value) {
            input.setCustomValidity('Fields must match');
        } else {
            input.setCustomValidity('');
        }
    }
</script>
